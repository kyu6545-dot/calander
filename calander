    <script>
        // --- Hardcoded Holiday Data for 2026 ---
        const HOLIDAYS_2026 = {
            // Format: "Month-Day": [{country: 'KR'|'US', name: 'Name'}]
            // Month is 1-based index to match render logic
            "1-1": [
                {country: 'KR', name: 'Ïã†Ï†ï'},
                {country: 'US', name: "New Year's Day"}
            ],
            "1-19": [{country: 'US', name: "MLK Jr. Day (Ìú¥Ïû•)"}],
            "2-16": [
                {country: 'KR', name: 'ÏÑ§ÎÇ† Ïó∞Ìú¥'},
                {country: 'US', name: "Washington's Birthday (Ìú¥Ïû•)"}
            ],
            "2-17": [{country: 'KR', name: 'ÏÑ§ÎÇ†'}],
            "2-18": [{country: 'KR', name: 'ÏÑ§ÎÇ† Ïó∞Ìú¥'}],
            "3-1": [{country: 'KR', name: 'ÏÇºÏùºÏ†à'}],
            "3-2": [{country: 'KR', name: 'ÎåÄÏ≤¥Í≥µÌú¥Ïùº(ÏÇºÏùºÏ†à)'}],
            "4-3": [{country: 'US', name: "Good Friday (Ìú¥Ïû•)"}],
            "5-5": [{country: 'KR', name: 'Ïñ¥Î¶∞Ïù¥ÎÇ†'}],
            "5-24": [{country: 'KR', name: 'Î∂ÄÏ≤òÎãòÏò§Ïã†ÎÇ†'}],
            "5-25": [
                {country: 'KR', name: 'ÎåÄÏ≤¥Í≥µÌú¥Ïùº(Î∂ÄÏ≤òÎãòÏò§Ïã†ÎÇ†)'},
                {country: 'US', name: "Memorial Day (Ìú¥Ïû•)"}
            ],
            "6-6": [{country: 'KR', name: 'ÌòÑÏ∂©Ïùº'}],
            "6-19": [{country: 'US', name: "Juneteenth (Ìú¥Ïû•)"}],
            "7-3": [{country: 'US', name: "Independence Day (Ìú¥Ïû•)"}],
            "8-15": [{country: 'KR', name: 'Í¥ëÎ≥µÏ†à'}],
            "8-17": [{country: 'KR', name: 'ÎåÄÏ≤¥Í≥µÌú¥Ïùº(Í¥ëÎ≥µÏ†à)'}],
            "9-7": [{country: 'US', name: "Labor Day (Ìú¥Ïû•)"}],
            "9-25": [{country: 'KR', name: 'Ï∂îÏÑù Ïó∞Ìú¥'}],
            "9-26": [{country: 'KR', name: 'Ï∂îÏÑù'}],
            "9-27": [{country: 'KR', name: 'Ï∂îÏÑù Ïó∞Ìú¥'}],
            "9-28": [{country: 'KR', name: 'ÎåÄÏ≤¥Í≥µÌú¥Ïùº(Ï∂îÏÑù)'}],
            "10-3": [{country: 'KR', name: 'Í∞úÏ≤úÏ†à'}],
            "10-5": [{country: 'KR', name: 'ÎåÄÏ≤¥Í≥µÌú¥Ïùº(Í∞úÏ≤úÏ†à)'}],
            "10-9": [{country: 'KR', name: 'ÌïúÍ∏ÄÎÇ†'}],
            "11-26": [{country: 'US', name: "Thanksgiving (Ìú¥Ïû•)"}],
            "12-25": [
                {country: 'KR', name: 'ÌÅ¨Î¶¨Ïä§ÎßàÏä§'},
                {country: 'US', name: "Christmas (Ìú¥Ïû•)"}
            ]
        };

        // --- State Management ---
        let currentYear = 2026;
        let currentMonth = 2; // 1-based index (2 = Feb)
        let selectedRows = [];
        let isMultiSelectMode = false;
        
        // --- Initialization ---
        function init() {
            // Check URL params or default to 2026-02
            renderCalendar(currentYear, currentMonth);
            loadData(); // Load saved data for this specific month
            
            // Auto-save interval
            setInterval(() => saveData(), 30000);
            
            // Auto-save on input
            document.getElementById('calendar-dates').addEventListener('input', debounce(function() {
                saveData();
            }, 2000));
        }

        // --- Core Calendar Logic ---
        function renderCalendar(year, month) {
            const calendarEl = document.getElementById('calendar-dates');
            calendarEl.innerHTML = ''; // Clear existing

            // Update Header UI
            document.getElementById('titleYear').innerText = year;
            document.getElementById('titleMonth').innerText = String(month).padStart(2, '0');
            document.getElementById('currentDateDisplay').innerText = `${year}.${String(month).padStart(2, '0')}`;

            // Calculate Dates
            const firstDay = new Date(year, month - 1, 1).getDay(); // 0(Sun) - 6(Sat)
            const lastDate = new Date(year, month, 0).getDate(); // 28, 29, 30, 31

            // 1. Render Empty Cells for prev month
            for (let i = 0; i < firstDay; i++) {
                const emptyCell = document.createElement('div');
                emptyCell.className = "day-cell border-r border-b border-slate-300 cell-height bg-slate-50/50";
                calendarEl.appendChild(emptyCell);
            }

            // 2. Render Actual Dates
            for (let date = 1; date <= lastDate; date++) {
                const dayOfWeek = new Date(year, month - 1, date).getDay();
                
                // Determine styling based on day
                let dateColorClass = "text-slate-400"; // Default
                let bgClass = "bg-white";
                
                // Holiday Check
                const holidayKey = `${month}-${date}`;
                const holidays = HOLIDAYS_2026[holidayKey];
                let holidayHtml = '';

                if (holidays) {
                    // Set holiday background
                    bgClass = "bg-red-50"; 
                    if (holidays.some(h => h.country === 'KR')) dateColorClass = "text-red-500"; // KR holidays make date red
                    
                    // Generate holiday text blocks
                    holidays.forEach(h => {
                        if(h.country === 'KR') {
                            holidayHtml += `<div class="holiday-text-kr" contenteditable="false">üá∞üá∑ ${h.name}</div>`;
                        } else {
                            holidayHtml += `<div class="holiday-text-us" contenteditable="false">üá∫üá∏ ${h.name}</div>`;
                        }
                    });
                } else {
                    // Normal weekend styling if not a holiday
                    if (dayOfWeek === 0) { // Sunday
                        dateColorClass = "text-red-400";
                    } else if (dayOfWeek === 6) { // Saturday
                        dateColorClass = "text-blue-400";
                    }
                }

                // Cell HTML Structure
                const cell = document.createElement('div');
                cell.className = `day-cell border-b border-slate-300 cell-height ${bgClass}`;
                if (dayOfWeek !== 6) cell.classList.add('border-r'); // Add right border except Sat

                // Date Number Header
                const headerHtml = `
                    <div class="h-6 flex items-center justify-between px-2 border-b border-slate-100 flex-none select-none">
                        <span class="font-bold text-xs ${dateColorClass}">${date}</span>
                    </div>
                `;

                // Task Area
                // If holiday, inject holiday HTML first, then empty editable rows
                const taskAreaHtml = `
                    <div class="task-container">
                        ${holidayHtml}
                        <div class="task-row" contenteditable="true" onclick="handleRowClick(this, event)"></div>
                    </div>
                `;

                cell.innerHTML = headerHtml + taskAreaHtml;
                calendarEl.appendChild(cell);
            }

            // 3. Fill remaining grid cells to keep layout neat
            const totalCells = firstDay + lastDate;
            const remaining = 7 - (totalCells % 7);
            if (remaining < 7) {
                for (let i = 0; i < remaining; i++) {
                     const emptyCell = document.createElement('div');
                     emptyCell.className = "day-cell border-b border-slate-300 cell-height bg-slate-50/50";
                     if (i < remaining - 1) emptyCell.classList.add('border-r');
                     calendarEl.appendChild(emptyCell);
                }
            }
        }

        function changeMonth(offset) {
            // Save current month before switching
            saveData();
            
            // Update state
            currentMonth += offset;
            if (currentMonth > 12) {
                currentMonth = 1;
                currentYear++;
            } else if (currentMonth < 1) {
                currentMonth = 12;
                currentYear--;
            }

            // Clear selection
            clearSelection();

            // Render new month
            renderCalendar(currentYear, currentMonth);
            
            // Load data for the new month
            loadData();
        }

        // --- Save & Load Logic ---
        function getStorageKey() {
            return `calendar_data_${currentYear}_${currentMonth}`;
        }

        function saveDataManual() {
            saveData(true);
        }

        function saveData(showMsg = false) {
            const container = document.getElementById('calendar-dates').innerHTML;
            const key = getStorageKey();
            localStorage.setItem(key, container);
            
            const statusEl = document.getElementById('saveStatus');
            const time = new Date().toLocaleTimeString('ko-KR', { hour: '2-digit', minute: '2-digit', second: '2-digit' });
            
            if(showMsg) {
                alert(`${currentYear}ÎÖÑ ${currentMonth}Ïõî Îç∞Ïù¥ÌÑ∞Í∞Ä Ï†ÄÏû•ÎêòÏóàÏäµÎãàÎã§.`);
            }
            statusEl.innerText = `Ï†ÄÏû•Îê®: ${time}`;
            statusEl.style.color = '#10b981'; // green
            setTimeout(() => { statusEl.style.color = '#64748b'; }, 2000);
        }

        function loadData() {
            const key = getStorageKey();
            const saved = localStorage.getItem(key);
            
            if (saved) {
                // If saved data exists, use it. 
                // However, if we just rendered holidays dynamically in renderCalendar(),
                // loading old HTML might overwrite the holiday indicators if the saved data didn't have them.
                // But typically, user wants to see what they saved.
                // Strategy: We load saved data. If user resets, they get fresh holidays.
                document.getElementById('calendar-dates').innerHTML = saved;
                reattachListeners(); 
                document.getElementById('saveStatus').innerText = "Îç∞Ïù¥ÌÑ∞ Î°úÎìúÎê®";
            }
        }

        function resetCurrentMonth() {
            if(confirm(`${currentYear}ÎÖÑ ${currentMonth}Ïõî Îç∞Ïù¥ÌÑ∞Î•º Î™®Îëê Ï¥àÍ∏∞Ìôî ÌïòÏãúÍ≤†ÏäµÎãàÍπå?`)) {
                localStorage.removeItem(getStorageKey());
                renderCalendar(currentYear, currentMonth); // Re-render clean with holidays
            }
        }

        // --- Helper Functions ---
        function reattachListeners() {
            const rows = document.querySelectorAll('.task-row');
            rows.forEach(row => {
                row.onclick = function(e) { handleRowClick(this, e); };
            });
        }

        function debounce(func, wait) {
            let timeout;
            return function(...args) {
                clearTimeout(timeout);
                timeout = setTimeout(() => func.apply(this, args), wait);
            };
        }

        // --- Row Manipulation Logic (Same as before) ---
        function toggleMultiSelect() {
            isMultiSelectMode = !isMultiSelectMode;
            const btn = document.getElementById('multiSelectBtn');
            const status = document.getElementById('multiStatus');
            
            if (isMultiSelectMode) {
                btn.classList.add('active');
                status.innerText = "(ON)";
            } else {
                btn.classList.remove('active');
                status.innerText = "(OFF)";
                clearSelection();
            }
        }

        function handleRowClick(element, event) {
            if (event) event.stopPropagation();

            const isCtrlPressed = event.ctrlKey || event.metaKey;

            if (isMultiSelectMode || isCtrlPressed) {
                if (selectedRows.includes(element)) {
                    element.classList.remove('selected-row');
                    selectedRows = selectedRows.filter(row => row !== element);
                } else {
                    element.classList.add('selected-row');
                    selectedRows.push(element);
                }
            } else {
                clearSelection();
                element.classList.add('selected-row');
                selectedRows.push(element);
            }
        }

        function clearSelection() {
            selectedRows.forEach(row => row.classList.remove('selected-row'));
            selectedRows = [];
        }

        function applyColor(colorClass) {
            if (selectedRows.length === 0) {
                alert('ÏÉâÏÉÅÏùÑ Î≥ÄÍ≤ΩÌï† ÌñâÏùÑ Î®ºÏ†Ä ÏÑ†ÌÉùÌï¥Ï£ºÏÑ∏Ïöî.');
                return;
            }
            selectedRows.forEach(row => {
                const bgClasses = Array.from(row.classList).filter(cls => cls.startsWith('bg-'));
                bgClasses.forEach(cls => row.classList.remove(cls));
                row.classList.add(colorClass);
            });
            saveData();
        }

        function connectRows() {
            if (selectedRows.length < 2) {
                alert('Ïó∞Í≤∞ÌïòÎ†§Î©¥ ÏµúÏÜå 2Í∞ú Ïù¥ÏÉÅÏùò ÌñâÏùÑ ÏÑ†ÌÉùÌï¥Ïïº Ìï©ÎãàÎã§.');
                return;
            }
            const allRows = Array.from(document.querySelectorAll('.task-row'));
            selectedRows.sort((a, b) => allRows.indexOf(a) - allRows.indexOf(b));

            selectedRows.forEach((row, index) => {
                row.classList.add('connected');
                row.classList.remove('bar-start', 'bar-mid', 'bar-end');

                if (index === 0) row.classList.add('bar-start');
                else if (index === selectedRows.length - 1) row.classList.add('bar-end');
                else row.classList.add('bar-mid');
            });

            const hasColor = selectedRows[0].className.includes('bg-');
            if (!hasColor) applyColor('bg-indigo-100');
            saveData();
        }

        function disconnectRows() {
            if (selectedRows.length === 0) {
                alert('Ìï¥Ï†úÌï† ÌñâÏùÑ ÏÑ†ÌÉùÌï¥Ï£ºÏÑ∏Ïöî.');
                return;
            }
            selectedRows.forEach(row => {
                row.classList.remove('connected', 'bar-start', 'bar-mid', 'bar-end');
            });
            saveData();
        }

        function addRow() {
            if (selectedRows.length === 0) {
                alert('ÌñâÏùÑ Ï∂îÍ∞ÄÌï† ÏúÑÏπòÏùò Ïπ∏(Ìñâ)ÏùÑ ÏÑ†ÌÉùÌï¥Ï£ºÏÑ∏Ïöî.');
                return;
            }
            const targetRow = selectedRows[selectedRows.length - 1];
            const newRow = document.createElement('div');
            newRow.className = 'task-row';
            newRow.contentEditable = "true";
            newRow.onclick = function(e) { handleRowClick(this, e); };
            
            if (targetRow.parentNode) {
                targetRow.parentNode.insertBefore(newRow, targetRow.nextSibling);
            }
            saveData();
        }

        function deleteRow() {
            if (selectedRows.length === 0) {
                alert('ÏÇ≠Ï†úÌï† ÌñâÏùÑ ÏÑ†ÌÉùÌï¥Ï£ºÏÑ∏Ïöî.');
                return;
            }
            if (!confirm(`ÏÑ†ÌÉùÌïú ${selectedRows.length}Í∞úÏùò ÌñâÏùÑ ÏÇ≠Ï†úÌïòÏãúÍ≤†ÏäµÎãàÍπå?`)) return;

            selectedRows.forEach(row => {
                const parent = row.parentNode;
                if (parent && parent.children.length > 0) {
                     parent.removeChild(row);
                }
            });
            selectedRows = [];
            saveData();
        }

        function toggleComplete() {
            if (selectedRows.length === 0) {
                alert('ÏÉÅÌÉúÎ•º Î≥ÄÍ≤ΩÌï† ÏóÖÎ¨¥(Ìñâ)Î•º ÏÑ†ÌÉùÌï¥Ï£ºÏÑ∏Ïöî.');
                return;
            }
            selectedRows.forEach(row => {
                row.classList.toggle('completed');
            });
            saveData();
        }

        document.addEventListener('click', function(e) {
            if (!e.target.closest('.day-cell') && !e.target.closest('.color-toolbar')) {
                clearSelection();
            }
        });
    </script>
</body>
</html>
